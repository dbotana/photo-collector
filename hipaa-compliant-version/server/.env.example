# HIPAA Compliant Photo Collector API - Environment Variables

# Server Configuration
NODE_ENV=production
PORT=3000

# JWT Configuration (Use strong, random values in production)
JWT_SECRET=your-super-secure-jwt-secret-key-here-minimum-32-characters
JWT_EXPIRES_IN=1h

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# S3 Configuration
S3_BUCKET_NAME=your-hipaa-compliant-s3-bucket
S3_ENCRYPTION_KEY_ID=alias/your-kms-key-for-s3

# KMS Configuration
KMS_KEY_ID=your-kms-key-id-for-application-encryption

# Database Configuration (if using external database)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=hipaa_photo_collector
DB_USER=your-db-user
DB_PASS=your-db-password
DB_SSL=true

# Security Configuration
ALLOWED_ORIGINS=https://your-frontend-domain.com,https://your-admin-panel.com
AUDIT_SALT=your-unique-audit-salt-for-hashing-sensitive-data

# Logging Configuration
LOG_LEVEL=info
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=10

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=5

# Session Configuration
SESSION_SECRET=your-session-secret-key
SESSION_TIMEOUT=3600000

# Monitoring and Alerts
SIEM_ENDPOINT=https://your-siem-system.com/api/events
ALERT_EMAIL=security@yourorganization.com
SLACK_WEBHOOK_URL=https://hooks.slack.com/your-webhook-url

# Compliance Configuration
ORGANIZATION_NAME=Your Healthcare Organization
COMPLIANCE_OFFICER_EMAIL=compliance@yourorganization.com
BAA_AGREEMENT_ID=your-baa-agreement-id

# Backup Configuration
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_ENCRYPTION_KEY_ID=your-backup-kms-key
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM

# External Service Integration
EXTERNAL_API_KEY=your-external-service-api-key
WEBHOOK_SECRET=your-webhook-secret-for-incoming-calls

# Development/Testing (Remove in production)
MOCK_AUTHENTICATION=false
SKIP_ENCRYPTION=false
DEBUG_LOGGING=false